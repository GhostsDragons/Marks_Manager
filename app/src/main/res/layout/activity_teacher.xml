<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/studybg"
    tools:context=".TeacherActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-117dp">

    <Button
        android:id="@+id/maths"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:text="Mathematics"
        app:layout_constraintBottom_toBottomOf="@+id/Phys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Phys"
        app:layout_constraintTop_toTopOf="@+id/Phys"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Phys"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:text="Physics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/maths"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bio" />


    <Button
        android:id="@+id/Chem"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:text="Chemistry"
        app:layout_constraintBottom_toBottomOf="@+id/Bio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Bio"
        app:layout_constraintTop_toTopOf="@+id/Bio" />

     <Button
        android:id="@+id/Bio"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:text="Biology"
        app:layout_constraintBottom_toTopOf="@+id/Phys"
        app:layout_constraintEnd_toStartOf="@+id/Chem"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="339dp"
        android:layout_height="143dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Choose Your Subject"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:background="@drawable/edittext_border"
        app:layout_constraintBottom_toTopOf="@+id/Bio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>